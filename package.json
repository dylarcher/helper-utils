{
    "author": "Dylan Archer <dylarcher@gmail.com> (@dylarcher)",
    "bugs": {
        "url": "https://github.com/dylarcher/js.helper-utils/issues"
    },
    "description": "Reusable javascript helper utility methods.",
    "devDependencies": {
        "@stedi/prettier-plugin-jsonata": "2.1.4",
        "@types/node": "24.0.3",
        "c8": "10.1.3",
        "eslint": "9.29.0",
        "eslint-config-prettier": "10.1.5",
        "eslint-plugin-markdown": "5.1.0",
        "eslint-plugin-prettier": "5.4.1",
        "eslint-plugin-yaml": "1.0.3",
        "jsdom": "26.1.0",
        "prettier": "3.5.3",
        "prettier-plugin-glsl": "0.2.1",
        "prettier-plugin-properties": "0.3.0",
        "rimraf": "6.0.1",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": ">=22.16.0",
        "npm": ">=10.9.2"
    },
    "exports": {
        "*": {
            "import": "./dist/*.js",
            "require": "./dist/*.js",
            "types": "./dist/types.d.ts"
        },
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/types.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "homepage": "https://dylarcher.github.io/js.helper-utils/",
    "keywords": [
        "helper",
        "utils",
        "utilities",
        "javascript",
        "library",
        "methods",
        "functions"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "name": "@dylarcher/js-helpers",
    "overrides": {
        "glob": "^10.4.5",
        "inflight": "npm:lru-cache@^10.2.0"
    },
    "packageManager": "npm@11.4.1",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "publisher": "darcher",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dylarcher/js.helper-utils.git"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p .github/presets/tsconfig.browser.json && tsc -p .github/presets/tsconfig.system.json",
        "changelog:released": "npx auto-changelog --package --output CHANGELOG.md --template keepachangelog --commit-limit false",
        "changelog:unreleased": "npx auto-changelog --commit-limit false --unreleased-only --template keepachangelog",
        "format": "prettier src --config .github/presets/.prettierrc.yml --log-level warn --ignore-unknown --no-error-on-unmatched-pattern --list-different --",
        "lint": "eslint src --config .github/presets/eslint.config.js --ext .js --report-unused-disable-directives --",
        "postversion": "git push && git push --tags && npm run publish:npm",
        "prebuild": "npm run lint:check && npm run format:check && npm run test",
        "prepare": "npm dedupe && npm prune",
        "update": "npm update && npm run build && npm clean-install",
        "prepublishOnly": "npm run build",
        "publish:npm": "npm publish --access public --registry https://registry.npmjs.org/",
        "test": "tsc -p .github/presets/tsconfig.system.test.json && tsc -p .github/presets/tsconfig.browser.test.json && node --no-warnings --test src/**/*.spec.js src/**/*.test.js",
        "test:coverage": "c8 --config .github/presets/.c8rc.json -- node --no-warnings --test src/**/*.spec.js src/**/*.test.js",
        "test:debug": "npm test --inspect-brk",
        "test:watch": "npm test --watch",
        "version": "npm run changelog:released && git add CHANGELOG.md",
        "version:prerelease": "npm version prerelease --preid=${1:-alpha} -m \"chore(pre-release): v%s\"",
        "version:major": "npm version major -m \"chore(release-major): v%s\"",
        "version:minor": "npm version minor -m \"chore(release-minor): v%s\"",
        "version:patch": "npm version patch -m \"chore(release-patch): v%s\""
    },
    "type": "module",
    "version": "2.0.0"
}
