{
    "[css]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[html]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.html": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[javascript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.ts": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[json]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.json": true,
            "source.fixAll.sortJSON": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[markdown]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.markdown": true,
            "source.fixAll.markdownlint": true,
            "source.fixAll.md": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[svg]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.svg": true,
            "source.fixAll.svgo": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[yaml]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
            "source.fixAll.sort": true,
            "source.fixAll.yaml": true
        },
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "eslint.codeActionsOnSave.mode": "problems",
    "eslint.enable": true,
    "eslint.format.enable": false,
    "eslint.lintTask.enable": true,
    "eslint.options": {
        "overrideConfigFile": "${workspaceFolder}/.github/presets/eslint.config.js"
    },
    "eslint.packageManager": "npm",
    "eslint.useFlatConfig": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "markdown",
        "yaml"
    ],
    "eslint.workingDirectories": [
        "${workspaceFolder}"
    ],
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.js": "${basename}.*.${extname}, ${basename}.d.ts, ${basename}.${extname}.map",
        "jsconfig.json": "${basename}.*.${extname}",
        "package.json": "${basename}-lock.${extname}, npm-shrinkwrap.${extname}, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "tsconfig.json": "${basename}.*.${extname}"
    },
    "files.associations": {
        ".c8rc": "json",
        ".editorconfig": "ini",
        ".gitignore": "properties",
        ".npmrc": "properties",
        ".nvmrc": "properties",
        ".prettierrc": "json",
        "CITATION.cff": "yaml",
        "LICENSE": "plaintext"
    },
    "html.format.enable": false,
    "html.validate.scripts": true,
    "html.validate.styles": true,
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    "json.format.enable": false,
    "json.validate.enable": false,
    "prettier.configPath": "${workspaceFolder}/.github/presets/.prettierrc.yml",
    "prettier.enable": true,
    "prettier.useEditorConfig": true,
    "prettier.withNodeModules": false,
    "typescript.format.enable": false,
    "typescript.validate.enable": false,
    "yaml.format.enable": false,
    "yaml.validate": false
}