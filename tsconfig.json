{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		"rootDir": "src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"declaration": true,
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"strict": true,
		"target": "esnext"
	},
	"exclude": ["node_modules", "dist", "docs", ".*"],
	"include": ["src"],
	"typeAcquisition": {
		"enable": true,
		"include": ["node", "eslint", "prettier", "dts-bundle-generator", "c8"]
	}
}
