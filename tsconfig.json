{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		"rootDir": "src",
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"lib": ["ES2020"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"target": "ES2020",
		"paths": {
			"@/*": ["src/*"],
			"@spec/*": ["dist/coverage/*"],
			"@demo/*": ["docs/*"],
			"#conf/*": [".github/presets/*"]
		}
	},
	"exclude": [
		"node_modules",
		"docs",
		"dist",
		"test",
		"utils",
		"src/**/*.spec.js",
		"src/**/*.test.js"
	],
	"include": ["src/**/*"],
	"typeAcquisition": {
		"enable": true,
		"include": ["eslint", "prettier"]
	}
}
